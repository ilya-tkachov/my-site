---
import Head from "@components/Head.astro"
import { SITE } from "@consts"

type Props = {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
